<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">
    <TextView
        android:id="@+id/normalText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Upload vehicle Info:"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginTop="90dp"/>

    <EditText
        android:id="@+id/ownerName1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/green_bg"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:hint="Enter owner name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/normalText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
    <EditText
        android:id="@+id/vehicleBrand1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/green_bg"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:hint="Enter vehicle brand"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/ownerName1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
    <EditText
        android:id="@+id/vehicleRto1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/green_bg"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:hint="Enter vehicle RTO"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/vehicleBrand1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
    <EditText
        android:id="@+id/vehicleNumber1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/green_bg"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:hint="Enter vehicle number"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/vehicleRto1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />
    <Button
        android:id="@+id/saveButton1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/green_bg"
        app:layout_constraintTop_toBottomOf="@id/vehicleNumber1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/green"
        android:text="Save"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp" />



</androidx.constraintlayout.widget.ConstraintLayout>